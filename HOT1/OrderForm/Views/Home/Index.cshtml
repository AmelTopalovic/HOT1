@model OrderFormModel
@{
	ViewData["Title"] = "Order Form";
	Layout = "_Layout";
}

<header>
	<h1 class="text-primary mt-3">
		Crazy Crank's T-Shirt Factory
	</h1>
	<p>
		Order Form
	</p>
</header>
<div>
	<form class="form-group" asp-action="Index" method="post">
		<div class="row mb-4">
			<div class="col-12"><label class="form-label col-2">Quantity</label></div>
			<div class="col-2"><input class="form-control col-2" /></div>
		</div>
		<div class="row mb-4">
			<div class="col-12"><label class="form-label col-2">Discount Code</label></div>
			<div class="col-2"><input class="form-control col-2" /></div>
		</div>
		<div>
			<button class="btn btn-primary mb-4"type="submit">Order</button>
		</div>
		<div class="mb-3 row">
			<div class="col-4"><textarea class="form-control border-1 border-dark" rows="3" readonly></textarea></div>
			
		</div>
		
	</form>
</div>